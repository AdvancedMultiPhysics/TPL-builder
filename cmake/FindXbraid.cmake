FUNCTION ( XBRAID_SET_INCLUDES  XBRAID_DIRECTORY )
    VERIFY_PATH( ${XBRAID_DIRECTORY} )
    VERIFY_PATH( ${XBRAID_DIRECTORY}/include )
    # Include the XBRAID directories
    SET( XBRAID_INCLUDE ${XBRAID_DIRECTORY}/include )
    SET( XBRAID_INCLUDE ${XBRAID_INCLUDE} PARENT_SCOPE )
ENDFUNCTION()


FUNCTION( XBRAID_SET_LIBRARIES  XBRAID_DIRECTORY )
    VERIFY_PATH ( ${XBRAID_DIRECTORY} )
    VERIFY_PATH ( ${XBRAID_DIRECTORY}/lib )
    SET( XBRAID_LIB_DIRECTORY ${XBRAID_DIRECTORY}/lib )
    # Find the XBRAID libaries
    SET( XBRAID_LIB_DIRECTORY ${XBRAID_DIRECTORY}/lib )
    FIND_LIBRARY ( XBRAID_LIB         NAMES XBRAID                PATHS ${XBRAID_LIB_DIRECTORY}  NO_DEFAULT_PATH )
    IF ( NOT XBRAID_LIB )
        MESSAGE( FATAL_ERROR "xbraid libraries not found" )
    ENDIF()
    SET ( XBRAID_LIBS ${XBRAID_LIBS} ${XBRAID_LIB} )
    SET ( XBRAID_LIBS ${XBRAID_LIBS} PARENT_SCOPE )
ENDFUNCTION()

